<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="STDOUT">
            <PatternLayout pattern="%d %p %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="Main" additivity="false">
            <AppenderRef ref="STDOUT"/>
        </Logger>
        <Root>
            <AppenderRef ref="STDOUT"/>
        </Root>
    </Loggers>
</Configuration>